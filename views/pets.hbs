<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
{{!-- Create a table --}}
<table id="pet-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.pet_id}}>>
            <td>{{this.pet_id}}</td>
            <td>{{this.character_id}}</td>
            <td>{{this.pet_name}}</td>
            <td>{{this.pet_age}}</td>
            <td><button onclick="deletePet({{this.pet_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_pet.js"></script>


<!-- /views/index.hbs -->

<h2>Search</h2>
<p>Search by pet name using the field below. Partial names are OK too!</p>
<form id="search-pet-html" method='GET' action='/'>
    <label for="input-pet_name">Search by Pet Name: </label>
    <input type="text" name="pet_name" id="input-pet_name-html-search">
    
    <input type="submit">
    <a href='/'><button>Reset</button></a>
</form>

{{!-- Form to add a record to the table  --}}
<h2>Add Pet</h2>
<p>To add a new pet, please enter their information below and click 'Submit'!</p>
<form id="add-pet-form-ajax">
    <label for="input-pet_name">Pet Name: </label>
    <input type="text" name="input-pet_name" id="input-pet_name">
    
    <label for="input-character_id">Character ID: </label>
    <select name="input-chracter_id" id="mySelect">
        <option value="test">Select a Character</option>
        {{#each data}}
        <option value="{{this.character_id}}">{{this.character_id}}</option>
        {{/each}}
    </select>

    <label for="input-pet_age">Pet Age: </label>
    <input type="text" name="input-pet_age" id="input-pet_age">

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_pet.js"></script>

<h2>Updating A Pet's Age</h2>
<p>To update a specific pet's age select their name from the drop-down menu on the left and change their age accordingly</p>
<form id="update-pet-form-ajax">

    <label for="input-pet_name">Pet Name: </label>
    <select name="input-pet_name" id="mySelectPet">
        <option value="test">Select a Pet</option>
        {{#each data}}
        <option value="{{this.pet_id}}">{{this.pet_name}}</option>
        {{/each}}
    </select>

    <label for="input-pet_age">Pet Age: </label>
    <input type="text" name="input-pet_age" id="input-pet_age-update">
    <input type="submit">
</form>

<script src="./js/update_pet.js"></script>